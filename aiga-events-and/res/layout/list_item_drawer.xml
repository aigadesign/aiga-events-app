<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_1_5x_padding" >

    <ImageView
        android:id="@+id/drawer_listimage"
        android:layout_width="@dimen/default_image_size"
        android:layout_height="@dimen/default_image_size"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/default_half_padding"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/drawer_listText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_listimage"
        android:padding="@dimen/default_half_padding"
        android:text="@string/calendar_title"
        android:textColor="@color/aiga_grey_3" />

</RelativeLayout>