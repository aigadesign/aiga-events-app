<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!--
This title strip will display the currently visible page title, as well as the page
titles for adjacent pages.
        -->

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/aiga_blue"
            android:paddingBottom="@dimen/pager_default_padding"
            android:paddingTop="@dimen/pager_default_padding"
            android:textColor="@color/aiga_white" />
    </android.support.v4.view.ViewPager>

    <include layout="@layout/message_first_launch_layout" />

</FrameLayout>